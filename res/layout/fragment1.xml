<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/notificationcenter"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/notificationcenter"
             />

        <ImageView
            android:id="@+id/lost"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@id/notificationcenter"
            android:src="@drawable/lost" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationcenter"
            android:layout_marginLeft="10dp"
            android:text="通知中心" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lost"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/t1"
            android:text="失物招领" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/forum"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/forum" />

        <ImageView
            android:id="@+id/physicaleduction"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@id/forum"
            android:src="@drawable/physicaleduction" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forum"
            android:layout_marginLeft="10dp"
            android:text="讲座信息" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/physicaleduction"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/t3"
            android:text="体育赛事" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp" >

        <ImageView
            android:id="@+id/clubactiviity"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/clubactiviity" />

        <ImageView
            android:id="@+id/lesson"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@id/clubactiviity"
            android:src="@drawable/lesson" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clubactiviity"
            android:layout_marginLeft="10dp"
            android:text="通知中心" />

        <TextView
            android:id="@+id/t6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lesson"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/t5"
            android:text="失物招领" />
    </RelativeLayout>

</LinearLayout>